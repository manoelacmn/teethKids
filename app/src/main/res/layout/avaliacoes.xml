<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutavaliacao"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/bottom_backgraud_perfilrecycle">


    <RatingBar

        android:id="@+id/rating"
        android:layout_width="233dp"
        android:layout_height="46dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nome"
        app:layout_constraintTop_toTopOf="10dp"
        app:layout_constraintVertical_bias="0.0"
        android:numStart="5"
        android:rating="4"
        android:stepSize="0.5"
        android:progressTint="@color/red_project"
        android:scaleX="0.6"
        android:scaleY="0.6"
        />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview"
        android:layout_width="233dp"
        android:layout_height="46dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nome"
        app:layout_constraintTop_toTopOf="10dp"
        app:layout_constraintVertical_bias="0.0"
    />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nome usÃºario"
        android:textColor="@color/Azul_escuro"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginStart="140dp" />


</androidx.constraintlayout.widget.ConstraintLayout>