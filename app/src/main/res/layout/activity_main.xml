<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/teeth_1_2"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/TvTitulo"
        android:layout_width="201dp"
        android:layout_height="126dp"
        android:ellipsize="end"
        android:fontFamily="@font/comfortaa_bold"
        android:gravity="center"
        android:singleLine="true"
        android:text="Seja"
        android:textColor="@color/azul_mais_escuro"
        android:textSize="50sp"
        android:backgroundTint="@color/azul_mais_escuro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.165" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/TvTitulo2"
        android:layout_width="331dp"
        android:layout_height="225dp"
        android:ellipsize="end"
        android:fontFamily="@font/comfortaa_bold"
        android:gravity="center"
        android:singleLine="true"
        android:text="Bem-Vindo"
        android:textColor="@color/azul_mais_escuro"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.225" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appCompatTextView11"
        android:layout_width="401dp"
        android:layout_height="146dp"
        android:fontFamily="@font/comfortaa_bold"
        android:gravity="center"
        android:text="Somos a OdontApp, promovendo o cuidado odontológico infantil com amor e urgência"
        android:textAlignment="center"
        android:textColor="@color/azul_mais_escuro"

        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.238"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/TvTitulo2"
        app:layout_constraintVertical_bias="0.36" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/BtnEntrar"
        android:layout_width="359dp"
        android:layout_height="69dp"
        android:background="@drawable/botton_background_bluelieth"
        app:layout_constraintBottom_toTopOf="@+id/BtnCriarConta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.963">

        <TextView
            android:id="@+id/Login"
            android:layout_width="191dp"
            android:layout_height="51dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:fontFamily="@font/comfortaa_bold"
            android:text="Entrar"
            android:textAlignment="center"
            android:textColor="@color/design_default_color_background"
            android:textSize="28dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/BtnCriarConta"
        android:layout_width="367dp"
        android:layout_height="69dp"
        android:background="@drawable/botton_background_bluemoredark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.96">

        <TextView
            android:id="@+id/Registro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa_bold"
            android:text="Registrar"
            android:textColor="@color/azul_mais_escuro"
            android:textSize="28dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>